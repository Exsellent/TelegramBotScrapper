# Остановить поиск других конфигураций Lombok
config.stopBubbling = true

# Разрешить только используемые аннотации
lombok.getter.flagUsage = ALLOW
lombok.setter.flagUsage = ALLOW
lombok.noArgsConstructor.flagUsage = ALLOW
lombok.allArgsConstructor.flagUsage = ALLOW
lombok.toString.flagUsage = ALLOW
lombok.builder.flagUsage = ALLOW

# Запретить неиспользуемые аннотации (опционально, для строгости)
lombok.data.flagUsage = ERROR
lombok.value.flagUsage = ERROR
lombok.superBuilder.flagUsage = ERROR
lombok.extensionMethod.flagUsage = ERROR
lombok.experimental.flagUsage = ERROR

# Настройки стиля геттеров/сеттеров
lombok.accessors.fluent = false
lombok.accessors.chain = true
lombok.accessors.makeFinal = false
lombok.accessors.capitalization = BASIC

# Генерация аннотаций
lombok.addJakartaGeneratedAnnotation = false
lombok.addJavaxGeneratedAnnotation = false
lombok.addLombokGeneratedAnnotation = true

# Логирование (оставляем только нужное, если используешь SLF4J)
lombok.log.flagUsage = ALLOW
lombok.log.slf4j.flagUsage = ALLOW
